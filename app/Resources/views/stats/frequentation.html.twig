{% extends 'base.html.twig' %}

{% block pageHeader %}
    <div>{{ template }}</div>
    <div class="page-header littleScroll">
        <div class="container">
            <h2 class="color3">Statistiques</h2>
        </div>
    </div>
{% endblock %}

{% block main %}
    <script>
        jQuery(document).ready(function () {

            var datas = {{ freeAccessStats|json_encode|raw }};
            /*var formatedDatas = [
                {x: '16/03', y: 727},
                {x: '17/03', y: 881},
                {x: '18/03', y: 2502},
                {x: '19/03', y: 1671},
                {x: '20/03', y: 2313},
                {x: '21/03', y: 908},
                {x: '22/03', y: 838},
                {x: '23/03', y: 4245},
                {x: '24/03', y: 3063},
                {x: '25/03', y: 2534},
                {x: '26/03', y: 1906}
            ];*/
            var formatedDatas = [
                {x: '16/03', y: 360},
                {x: '17/03', y: 440},
                {x: '18/03', y: 1250},
                {x: '19/03', y: 880},
                {x: '20/03', y: 1150},
                {x: '21/03', y: 475},
                {x: '22/03', y: 450},
                {x: '23/03', y: 2102},
                {x: '24/03', y: 1509},
                {x: '25/03', y: 1252},
                {x: '26/03', y: 958}
            ];
            for (var item in datas) {
                formatedDatas.push({x: item, y: datas[item]});
            }
            if($('#chart2build').length){
                var timeFormat = 'DD/MM';

                var config = {
                    type:    'line',
                    data:    {
                        datasets: [
                            {
                                label: "Visites",
                                data: formatedDatas,
                                fill: false,
                                borderColor: 'red'
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        title:      {
                            display: true,
                            text:    "Fréquentation de la page en libre accès, seulement par les utilisateurs non connectés."
                        },
                        scales:     {
                            xAxes: [{
                                type:       "time",
                                time:       {
                                    format: timeFormat,
                                    tooltipFormat: 'll'
                                },
                                scaleLabel: {
                                    display:     true,
                                    labelString: 'Date'
                                },
                                ticks: {
                                    source: 'data'
                                }
                            }],
                            yAxes: [{
                                scaleLabel: {
                                    display:     true,
                                    labelString: 'Nombre de visites par jour'
                                }
                            }]
                        }
                    }
                };

                var ctx = document.getElementById("chart2build").getContext("2d");
                window.myLine = new Chart(ctx, config);
            }

        });
    </script>

    <div class="container mt-220 mb-40">
        <div class="row">
            <script src="{{ asset('vendors/chart.js/dist/Chart.bundle.js') }}"
                    type="text/javascript"></script>
            <canvas id="chart2build"></canvas>
        </div>
    </div>
{% endblock %}