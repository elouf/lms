                                                            {% endif %}
                                                            <li><i class="fa fa-hourglass-end"></i> {{ valC.session.dateFin|localizeddate('none', 'none', null, null, 'd LLLL Y' ) }}</li>
                                                            {% if app.user.hasRole('ROLE_SUPER_ADMIN') %}
