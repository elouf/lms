                                                            {% endif %}
                                                        </ul>
                                                        <p class="brief">{{ valC.description|raw }}</p>
                                                        <a href="{{ path('oneCours', {id: valC.id, mode: 'etu'}) }}" class="btn btn-primary btn-sm">Entrer</a>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        {% endif %}
                                        {% if val.sessionsAdmin is defined %}
                                            {% for keyC,valC in val.sessionsAdmin %}
                                                <div class="course-list course-session" data-idCours="{{ valC.id }}" style="margin-top: 0; opacity: .6;">
                                                    <div class="course-media">
