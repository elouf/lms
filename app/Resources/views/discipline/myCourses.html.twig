                                                            <br/>
                                                            <li><i class="fa fa-hourglass-start"></i> {{ valC.session.dateDebut|localizeddate('none', 'none', null, null, 'd LLLL Y' ) }}</li>
                                                        </ul>
                                                        <p class="brief">{{ valC.session.messageFinSession|raw }}</p>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        {% endif %}
                                        {% for keyC,valC in val.courses %}
