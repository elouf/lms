<div class="row">
    <div class="col-sm-12">
        <table class="docTable table table-boxed">
            <thead>
                <tr>
                    <th>Nom du fichier</th>
                    <th>Auteur</th>
                    <th>Date de dépôt</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for key,val in docs %}
                    <tr data-docId="{{ val.id }}">
                        <td><a href="{{ val.url }}">{{ val.nom }}</a><i class="fa fa-info-circle infoDocument" aria-hidden="true"></i></td>
                        <td>{{ val.proprietaire.firstname }} {{ val.proprietaire.lastName }}</td>
                        <td data-text="{{ val.dateCrea|date("Y-m-d" ) }}">{{ val.dateCrea|localizeddate('none', 'none', null, null, 'd LLLL Y à h:mm' ) }}</td>
                        <td>
                            <a href="{{ val.url }}" class="btn btn-primary btn-sm" target="_blank">Télécharger</a>
                            {% if app.user.id == val.proprietaire.id or app.user.hasRole('ROLE_SUPER_ADMIN') %}
                                <a class="btn btn-sm btn-danger deleteDoc">Supprimer</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>