                        var cohsList = $(this).attr('data-cohs').split(',');
                        if (jQuery.inArray(idCoh, cohsList) != -1) {
                            $(this).addClass('surligne')/*.prependTo($(this).parent())*/;
                        }
                    });
                    $(filtr_cou).each(function () {
                        var discId = $(this).attr('data-discipline');
                        if ($('[data-idItem=' + discId + ']').hasClass('surligne')) {
                            $(this).addClass('surligne')/*.prependTo($(this).parent())*/;
                        }
                    });
                }
            });
            $(filtr_dis).mouseover(function () {
                if (!$('.verrouille_item').length) {
                    $('.surligne').removeClass('surligne');
                    $(this).addClass('surligne');
                    var idDis = $(this).attr('data-idItem');
                    $(filtr_cou).each(function () {
                        var discId = $(this).attr('data-discipline');
                        if (discId == idDis) {
                            $(this).addClass('surligne')/*.prependTo($(this).parent())*/;
                        }
                    });
                }
            });
            $(filtr_cou).mouseover(function () {
                if (!$('.verrouille_item').length) {
                    $('.surligne').removeClass('surligne');
                    $(this).addClass('surligne');
                }
            });

            $('.filtred_item').click(function () {
                $('.btnMenuActionInscrUser').hide();
                $('.btnAnnuler, .btnOuvrirItem').show();
                $(this).addClass('verrouille_item');
                $('.menuActionInscrUser').show();
                $('.btnOuvrirItem').attr('href', $(this).attr('data-itemHref'));
                if ($(this).attr('data-filtrehasaccess') == 1) {

                } else {
                    if ($(this).attr('data-filtreisinscrit') == 1) {
                        $('.btnDesInscrire').show();
                    } else {
                        $('.btnInscrire').show();
                    }
                }
            });
            $('.btnAnnuler').click(function () {
                $('.verrouille_item').removeClass('verrouille_item');
                $('.menuActionInscrUser').hide();
            });

            $('.btnInscrire').click(function () {
                var typeItem = $('.verrouille_item').attr('data-typeItem');
                var idItem = $('.verrouille_item').attr('data-idItem');
                var idUser = $('[data-userIdFiche]').attr('data-userIdFiche');

                $('.modal').modal('toggle');
                $('.modeDesinscr').hide();
                $('.modeInscr').show();

                $('.valideInscr').unbind('click').click(function () {
                    $.ajax({
                        type: "POST",
                        url: "{{ path('inscrireUser_ajax') }}",
                        data: {
                            idItem: idItem,
                            idUser: idUser,
                            typeItem: typeItem,
                            idRole: $('.selectRole').val()

                        },
                        dataType: "json",
                        success: function (response) {
                            window.location.href = window.location.href.replace(/[\?#].*|$/, "?cours");
                        }
                    });
                });
            });
            $('.btnDesInscrire').click(function () {
                var typeItem = $('.verrouille_item').attr('data-typeItem');
                var idItem = $('.verrouille_item').attr('data-idItem');
