{% extends 'base.html.twig' %}

{% block pageHeader %}
    <div class="page-header">
        <div class="container">
            <h2 class="color3">Activation du compte</h2>
            <ul class="breadcrumb">
                <li class="color3">Compte activé</li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block main %}
    <div class="container mt-10 mb-40">
        <div class="row">
            <div class="col-sm-12 text-justify">
                <h3>Votre compte est bien activé !</h3>

                <p>Bonjour {{ user.firstname }} {{ user.lastname }}! Votre compte est bien activé.</p>

                <p>Vous pouvez maintenant vous authentifier sur <a href="{{ path('homepage') }}">la page d'accueil</a></p>

                {% if not user.confirmedByAdmin %}
                    <p>Attention ! Vous avez choisi un statut {{ user.statut }}.</p>
                    <p>Ce statut vous donne droit à des fonctionnalités supplémentaires. Elles seront actives lorsque l'administrateur de l'AFADEC aura confirmé votre compte. Vous serez averti dans les 24h de cette confirmation.</p>
                {% endif %}

                <p>Merci!</p>
                <p>L'équipe AFADEC</p>
                <p><a class="studitBlueFC" href="mailTo:contact.afadec@gmail.com">contact.afadec@gmail.com</a></p>
            </div>
        </div>
    </div>
{% endblock %}